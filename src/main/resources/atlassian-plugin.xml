<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
       <bundle-instructions>
            <Import-Package>javax.ws.rs.ext.MessageBodyReader,*;resolution:=optional</Import-Package>
        </bundle-instructions>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="Checkmarx language" location="english"/>

    <!-- publish components -->
    <taskType key="checkmarx" name="Checkmarx" class="com.cx.plugin.CheckmarxTask">
        <description>Security static source code analysis</description>
        <configuration class="com.cx.plugin.AgentTaskConfigurator"/>
        <resource type="freemarker" name="edit" location="/com/cx/plugin/editExampleTask.ftl"/>
        <resource type="freemarker" name="view" location="/com/cx/plugin/viewExampleTask.ftl"/>
        <resource type="download" name="icon" location="/images/TaskIcon.png" />
    </taskType>

    <xwork key="checkmarx-default-config-xwork" name="Checkmarx Default Configuration XWork">
        <package name="checkmarxDefaultConfigurationPackage" extends="admin">
            <action name="checkmarxDefaultConfiguration" class="com.cx.plugin.CxDefaultConfig">
                <result name="input" type="freemarker">/com/cx/plugin/cxDefaultConfig.ftl</result>
                <result name="error" type="freemarker">/com/cx/plugin/cxDefaultConfig.ftl</result>
                <result name="success" type="freemarker">/com/cx/plugin/cxDefaultConfig.ftl</result>
            </action>
        </package>
    </xwork>


    <web-item key="checkmarx-default-config-webitem" name="Checkmarx Default Configuration WebItem" section="system.admin/plugins">
        <label key="cxDefaultConfigWebItem.label" />
        <link linkId="checkmarx-default-config-link">/admin/checkmarxDefaultConfiguration.action</link>
    </web-item>

</atlassian-plugin>